#! /usr/bin/perl

package drawer;

use strict;
use warnings;

use EnsEMBL::Web::Data::User;
use EnsEMBL::Web::RegObj;
use CGI;

my $cgi = new CGI;
my $user = $ENSEMBL_WEB_REGISTRY->get_user; 

if ($user) {

  my $found = 0;
  my $record = undef;
  foreach my $this (@{ $user->drawers }) {
    $record = $this;
  }

  if (!$record) {
    $record = EnsEMBL::Web::Data::Record::Drawer::User->new;
    $record->user_id($user->id);
  }

  $record->group($cgi->param('group'));
  $record->save;

}

print "Content-type: text/plain\n\n";
print "Done";

1;
