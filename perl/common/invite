#! /usr/bin/perl

package invite;

use EnsEMBL::Web::Record::Group;
use EnsEMBL::Web::SpeciesDefs;
use EnsEMBL::Web::Tools::RandomString;
use EnsEMBL::Web::Group::Record;
use EnsEMBL::Web::RegObj;

use CGI;
my $cgi = new CGI;

my $url = "/common/accountview";
my $user = $ENSEMBL_WEB_REGISTRY->get_user;
if ($user) {
  my $group = EnsEMBL::Web::Object::Group->new(( adaptor => $ENSEMBL_WEB_REGISTRY->userAdapator, id => $cgi->param('group_id') )); 
  $url = "/common/groupview?id=" . $group->id;
  if ($cgi->param('user_id') eq $user->id) {
    if ($user->is_administrator($group)) {

      $record = EnsEMBL::Web::Record::Group->new((  adaptor => $ENSEMBL_WEB_REGISTRY->userAdapator, 
                                                    user => $group->id, 
                                                    type => "invite" ));
      $record->email($cgi->param('invite_email'));
      $record->status("pending");
      $record->code(EnsEMBL::Web::Tools::RandomString::random_string());
      $record->save;

      $user->send_invite_email($group, $record, $cgi->param('invite_email'));
      my $feedback = "Invitation email send to: " . $cgi->param('invite_email');
      $url .= "&feedback=" . CGI::escape($feedback); 
    } else {
      $url = "/failed.html";
    }
  }
}

CGI::redirect($url);

1;
