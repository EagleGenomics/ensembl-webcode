#!/usr/local/bin/perl

package multicontigview;

use strict;
use warnings;
no warnings "uninitialized";

use EnsEMBL::Web::Document::WebPage;

my $webpage= new EnsEMBL::Web::Document::WebPage(
  'renderer'   => 'Apache',
  'outputtype' => 'HTML',
  'scriptname' => 'multicontigview',
  'objecttype' => 'MultipleLocation',
);

if( $webpage->has_a_problem() ) {
  $webpage->render_error_page( $webpage->problem->[0] );
} else {
  foreach my $object( @{$webpage->dataObjects} ) {
    $webpage->configure( $object, 'multicontigview', 'context_menu' );
  }
  $webpage->factory->fix_session;
  $webpage->render();
}

1;
